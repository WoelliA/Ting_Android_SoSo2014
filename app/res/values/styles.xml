<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->


    <!-- Application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light"></style>

    <style name="Theme.AppCompat.Light.NoActionBar" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:buttonStyle">@style/ting_button_style</item>
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="header_text_style" parent="android:Widget.Holo.Light.TextView">
        <item name="android:layout_marginRight">@dimen/activity_content_padding</item>
        <item name="android:layout_marginLeft">@dimen/activity_content_padding</item>
        <item name="android:layout_marginTop">@dimen/activity_content_padding</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ting_button_style" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@color/pin_button_background_color</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
        <item name="android:textColor">@color/pin_button_text_color</item>
        <item name="android:textSize">@dimen/pin_controls_textsize</item>
        <item name="android:paddingRight">@dimen/ting_button_margin_side</item>
        <item name="android:paddingLeft">@dimen/ting_button_margin_side</item>
    </style>

    <style name="ting_toggle_button_style">
        <item name="android:background">@drawable/ting_toggleselector</item>
        <item name="android:textColor">@drawable/ting_toggle_text_selector</item>
    </style>

    <style name="label_style" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textColor">#333</item>
    </style>

    <style name="textButtonStyle" parent="android:Widget.Holo.Light.Button">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>